
## Copy this file to .env and fill in secrets locally (do NOT commit .env)

# ===== BACKEND (Spring Boot) =====
# Pooler-friendly JDBC URL (use your project's pooler host)
SPRING_DATASOURCE_URL=jdbc:postgresql://aws-1-us-east-1.pooler.supabase.com:5432/postgres?sslmode=require&connectTimeout=10&socketTimeout=30&prepareThreshold=0
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=CHANGE_ME

# Hikari pool settings (recommended defaults)
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=5
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=1
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=10000

# Supabase JWT Secret (get from Supabase Dashboard -> Settings -> API)
SUPABASE_JWT_SECRET=CHANGE_ME_YOUR_JWT_SECRET

# Supabase Auth configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=CHANGE_ME_YOUR_ANON_KEY

# Email configuration (Hotmail/Outlook compatible)
SPRING_MAIL_USERNAME=your-email@hotmail.com
SPRING_MAIL_PASSWORD=CHANGE_ME_YOUR_APP_PASSWORD

# Scrapy Python service URL
SCRAPY_SERVICE_URL=http://localhost:8001

# ===== SCRAPY / PYTHON =====
# Python-style DATABASE_URL (not JDBC) for asyncpg/psycopg2 usage
# Note: replace CHANGE_ME with the same password you set above
DATABASE_URL=postgresql://postgres:CHANGE_ME@aws-1-us-east-1.pooler.supabase.com:5432/postgres?sslmode=require

# Frontend (not used when frontend proxies /api)
VITE_API_URL=http://localhost:8080
